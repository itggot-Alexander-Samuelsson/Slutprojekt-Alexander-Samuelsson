<div class="mdl">
<div class="mdl-card">
  <% for article in @articles do %>
      <% @attachments = ArticleAttachment.all(:article_id => article.id) %>
      <div class="article_container">
        <div class="mdl-card__title">
          <h2><%= article.title %></h2>
        </div>
        <div id="article_categories" class="mdl-card__title-text">
          Kategori:
          <% for category in article.categories %>
              <%= category.name %>
          <% end %>
        </div>
        <div id="article_text" class="mdl-card__supporting-text">
          <a href="/user/knowledgebase/article/<%= article.id %>">Läs mer och se bilder</a>
          <br>
          <br>
          <span><%= article.text %></span>
          <br>
          <br>
        </div>
        <div class="mdl-card__media">
          <% for attachment in @attachments do %>
              <img src="<%= attachment.path %>" alt="Bild här">
          <% end %>
        </div>
      </div>
  <% end %>
</div>
</div>


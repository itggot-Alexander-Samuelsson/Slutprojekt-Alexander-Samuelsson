<div id="admin_menu">
  <table><tr>
    <td><a href="/admin/users"><h3>Användare</h3></a></td>
    <td><h3 style="text-decoration: underline;">Ärenden</h3></td>
    <td><a href="/admin/knowledgebase"><h3>Vanliga Problem</h3></a></td>
  </tr></table>
</div>

<div id="back_button">
  <a href="/admin/issues"><button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">
    <i class="material-icons">arrow_back</i>
  </button></a>
</div>


<div class="mdl-card">
  <div class="mdl-card__title">
    <h2><%= @issue.title %></h2>
    <ul for="user_show_issue_menu"></ul>
  </div>
  <% for update in @updates do %>
      <% @attachments = CaseAttachment.all(:update_id => update.id) %>

      <div class="update_container">
        <div class="mdl-card__title-text">
          <span>Uppdaterad: <%= update.created_at.strftime('%Y-%m-%d') %></span>
        </div>
        <div class="mdl-card__supporting-text">
          <span><%= update.text %></span>
        </div>
        <div class="mdl-card__media">
          <% for attachment in @attachments do %>
              <img src="<%= attachment.path %>" alt="Bild här">
              <span><%= attachment.name %></span>
          <% end %>
        </div>
      </div>
  <% end %>
  <div class="mdl-card__actions">
    <a href="/user/issue/<%= @issue.id %>/update"><button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">
      Uppdatera
    </button></a>
    <a href="/user/issue/<%= @issue.id %>/resolve"><button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">
      Markera som löst
    </button></a>
  </div>
</div>